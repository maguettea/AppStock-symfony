{% extends 'accueil.html.twig' %}

{% block title %}Gestion des Sorties{% endblock %}
{% block titleh1 %}Gestion des Sorties{% endblock %}
{% block Item %}Sorties{% endblock %}
{% block body %}
<div class="row">
    <div class="container col-md-6">
        <div class="card">
            <div class="card-header text-center bg-primary text-white">Liste des Ventes</div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark text-center text-white">
                    <tr>
                        <th scope="col">Identifiant</th>
                        <th scope="col">date</th>
                        <th scope="col">Quantite Vendue</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Produit</th>

                    </tr>
                    </thead>
                    {% for s in sorties %}
                    <tr>
                        <th scope="row">{{ s.id }}</th>
                       <td>{{ s.date|date('d/m/y') }}</td>
                        <td>{{ s.qte }}</td>
                         <td>{{ s.prix }}</td>
                         <td>{{ s.produit }}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="card-footer">LICENCEGENIELOGICIEL</div>
        </div>
    </div>
    <div class="container col-md-6">    
        <div class="card">
            <div class="card-header text-center bg-primary text-white">Formulaire de gestion des Ventes</div>
            <div class="card-body">
                {% if error_message is defined %}
                <div class="alert alert-danger">{{ error_message }}</div>
                 {% endif %}
                {{ form(form) }}
            </div>
            <div class="card-footer">LICENCEGENIELOGICIEL</div>
        </div>
    </div>
</div>
{% endblock %}
