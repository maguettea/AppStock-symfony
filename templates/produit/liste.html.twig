{% extends 'accueil.html.twig' %}

{% block title %}Gestion des Produits{% endblock %}
{% block titleh1 %}Gestion des Produits{% endblock %}
{% block Item %}Produits{% endblock %}

{% block body %}
<div class="row">
    <div class="container col-md-6">
        <div class="card">
            <div class="card-header text-center bg-primary text-white">Liste des Produits</div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark text-center text-white">
                    <tr>
                        <th scope="col">Identifiant</th>
                        <th scope="col">Libelle</th>
                        <th scope="col">Quantit en stock</th>
                        <th scope="col">Categories</th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                    </thead>
                    {% for p in produits %}
                    <tr>
                            <th scope="row">{{ p.id }}</th>
                            <td>{{ p.libelle }}</td>
                            <td>{{ p.stock }}</td>
                            <td>{{ p.categories }}</td>
                            <td class="btn btn-outline-warning">
                            <i class="btn btn-sucess"> <a href="{{ path('produit_edit', {'id': p.id}) }} ">Edit</a></i>
                        </td>
                        <td class="btn btn-danger">
                            <i class="fas fa-trash"> <a href="{{ path('produit_delete', {'id': p.id}) }}">Supr</a></i>
                        </td>
                        
                    </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="card-footer">LICENCEGENIELOGICIEL</div>
        </div>
    </div>
    <div class="container col-md-6">    
        <div class="card">
            <div class="card-header text-center bg-primary text-white">Formulaire de Gestion des Produits</div>
            <div class="card-body">
                {{ form(form) }}
            </div>
            <div class="card-footer">LICENCEGENIELOGICIEL</div>
        </div>
    </div>
</div>
{% endblock %}
