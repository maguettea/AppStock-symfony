{% extends 'accueil.html.twig' %}

{% block title %}Gestion des Categories{% endblock %}
{% block titleh1 %}Gestion des Categories{% endblock %}
{% block Item %}Categories{% endblock %}
{% block body %}
<div class="row">
    <div class="container col-md-6">
        <div class="card">
            <div class="card-header text-center bg-primary text-white">Liste des Categories </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark text-center text-white">
                    <tr>
                        <th scope="col">Identifiant</th>
                        <th scope="col">Nom</th>
                    </tr>
                    </thead>
                    {% for c in categories %}
                    <tr>
                        <th scope="row">{{ c.id }}</th>
                         <td>{{ c.nom}}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="card-footer">LICENCEGENIELOGICIEL</div>
        </div>
    </div>
    <div class="container col-md-6">    
        <div class="card">
            <div class="card-header text-center bg-primary text-white">Formulaire de gestion des Categories</div>
            <div class="card-body">
                {{ form(form) }}
            </div>
            <div class="card-footer">LICENCEGENIELOGICIEL</div>
        </div>
    </div>
</div>
{% endblock %}
                

